{
  "root": true,
  "parser": "babel-eslint",
  "parserOptions": {
    "sourceType": "module"
  },
  "extends": "standard",
  "rules": {
    // allow paren-less arrow functions
    "arrow-parens": 0,
    // allow async-await
    "generator-star-spacing": 0,
    // 语句强制分号结尾
    "semi": [1, "always"],
    // 去掉函数前空格的校验
    "space-before-function-paren": 0,
    // 引号使用 ''
    "quotes": [1, "single"]
  },
  "env": {
    "mocha": true
  }
}
