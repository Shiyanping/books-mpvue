{
  "root": true,
  "parser": "babel-eslint",
  "parserOptions": {
    "sourceType": "module"
  },
  "extends": "standard",
  "rules": {
    // "indent": [2, 4, { "SwitchCase": 1 }],
    "arrow-parens": 0,
    "generator-star-spacing": 0
    // 语句强制分号结尾
    "semi": [1, 'always']
  },
  "env": {
    "mocha": true
  }
}